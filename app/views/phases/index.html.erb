<h1>Phases</h1>

<div id="phases">
  <table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @phases.each do |phase| %>
        <tr>
          <td><%= phase.description %></td>
          <td> <button><%= link_to "Edit", edit_phase_path(phase) %></button></td>
          <td> <%= button_to "Delete", phase, method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

