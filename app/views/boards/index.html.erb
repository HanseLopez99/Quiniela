<p style="color: green"><%= notice %></p>

<div>
  <%= link_to "Back to Main Menu", root_path %>
</div>

<h1>Boards</h1>

<div id="boards">
  <table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Game</th>
        <th>User</th>
        <th>Score1</th>
        <th>Score2</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @boards.each do |board| %>
        <tr>
          <td><%= Game.find_by(id:board.games_id).title %></td>
          <td><%= User.find_by(id:board.users_id).first_name %></td>
          <td><%= board.score1 %></td>
          <td><%= board.score2 %></td>
          <% if current_user == User.find_by(id:board.users_id) %>
            <td> <button><%= link_to "Edit", edit_board_path(board) %></button></td>
            <td> <%= button_to "Delete", board, method: :delete %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<%= link_to "New board", new_board_path %>
