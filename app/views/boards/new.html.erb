<h1>New board</h1>

<%= form_with model: @board, url: boards_path(@board), method: :post do |frm| %>

  <div class="field">
    <%= frm.label :users_id %><br />
    <%# Only only show the current user first_name and submin the current user id %>
    <%= frm.text_field :users_id, value: current_user.first_name, readonly: true %>
    <%= frm.hidden_field :users_id, value: current_user.id %>
  </div>
  <br>

  <div class="field">
    <%= frm.label :games_id %><br />
    <%= frm.select :games_id, @games.map { |game| [game.title, game.id]}, {}, class: "form-control" %>
  </div>
  <br>

  <div class="field">
    <%= frm.label :score1 %><br />
    <%= frm.number_field :score1, in: 1..25, step: 1 %>
  </div>
  <br>

  <div class="field">
    <%= frm.label :score2 %><br />
    <%= frm.number_field :score2, in: 1..25, step: 1 %>
  </div>
  <br>

  <%= frm.submit %>
  <br>

<% end %>
<br>

<div>
  <%= link_to "Back to boards", boards_path %>
</div>
