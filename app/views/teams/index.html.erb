<p style="color: green"><%= notice %></p>

<div>
  <%= link_to "Back to Main Menu", root_path %>
</div>

<h1>Teams</h1>

<div id="teams">
  <table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Logo</th>
        <th>Name</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td><%= image_tag team.logo if team.logo.attached? %></td>
          <td><%= team.name %></td>
          <td> <button><%= link_to "Edit", edit_team_path(team) %></button></td>
          <td> <%= button_to "Delete", team, method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<%= link_to "New team", new_team_path %>
